---
import TyWorks from "@/components/TyWorks.astro";
import TyLayout from "@/layouts/TyLayout.astro";
import TySection from "@/layouts/TySection.astro";
import TyText from "@/components/TyText.astro";
import TyDiv from "@/layouts/TyDiv.astro";
---

<TyLayout title="Works" currentPage="works" headingPage="Works" lang="en">
  <TySection heading="Works">
    <TyDiv>
      <TyText size="md"
        >Only publicly available achievements are listed here.</TyText
      >
      <TyText size="md"
        >For accomplishments related to private projects, please refer to the
        skill sheet.</TyText
      >
      <TyText size="md"
        >Please note that the link to the skill sheet is not provided on this
        website.</TyText
      >
    </TyDiv>
    <TyWorks isHideComments />
  </TySection>
</TyLayout>
